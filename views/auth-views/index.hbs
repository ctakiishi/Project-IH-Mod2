<form class="form-signin d-flex justify-content-around align-items-center" action="/" method="post">
  <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="./images/login-1.jpg" class="d-block" alt="Books green">
        <div class="overlay"></div>
      </div>
      <div class="carousel-item">
        <img src="./images/login-2.jpg" class="d-block" alt="Books pink">
        <div class="overlay"></div>
      </div>
      <div class="carousel-item">
        <img src="./images/login-3.jpg" class="d-block" alt="Colored books">
        <div class="overlay"></div>
      </div>
    </div>
  </div>

  <section id="login-info" class="pl-5">
    <img class="mb-4 rounded mx-auto d-block" src="./images/Logo.png" alt="Logo" width="100" height="100">
    <h1 class="h4 mb-3 font-weight-normal text-center">Please log in</h1>
    <div>
      <label for="inputEmail" class="sr-only">Email address</label>
      <input type="email" name="username" id="username" class="form-control mb-2 pl-2" placeholder="Email address"
        required autofocus onkeyup="manage(this)">

    <div>
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" name="password" id="password" class="form-control pl-2 mb-2" placeholder="Password"
        required onkeyup="manage(this)">

    <div class="forgot-password d-flex justify-content-center">
      <p class="pr-2">Forgot your password?</p><a href="/forgotpass">Click here</a>
    </div>

    {{#if usernameError}}
      <div class="invalid text-center text-danger pb-2">
        <span>{{usernameError}}</span>
      </div>
      {{/if}}
    </div>

    {{#if passwordError}}
      <div  class="invalid text-center text-danger pb-2">
        <span>{{passwordError}}</span>
      </div>
      {{/if}}
    </div>

    {{#if errorMessage}}
    <div class="invalid text-center text-danger pb-2">
      <span>{{errorMessage}}</span>
    </div>
    {{/if}}

    {{#if sessionExpired}}
    <div class="invalid text-center text-danger pb-2">
      <span>Expired session, please login again.</span>
    </div>
    {{/if}}

    <input class="btn btn-lg btn-primary btn-block mb-4" type="submit" id="submit" value="Login" disabled />

    <div class="signup d-flex justify-content-center">
      <p class="not-member pr-2">Not a member?</p><a href="/signup">Register here</a>
    </div>
  </section>

  <script>
    function manage(txt) {
      var bt = document.getElementById('submit');
      var ele = document.getElementsByTagName('input');

      for (i = 0; i < ele.length; i++) {

        if ((ele[i].type === 'text' || ele[i].type === 'password') && ele[i].value == '') {
          bt.disabled = true;    // Disable the button.
          return false;
        }
        else {
          bt.disabled = false;   // Enable the button.
        }
      }
    }
  </script>
</form>