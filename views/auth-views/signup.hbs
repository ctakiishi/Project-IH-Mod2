<div class="container">
  <form class="form-signup d-flex flex-column align-items-center justify-content-center d-block" action="/signup"
    method="post">
    <img class="mb-4 rounded mx-auto d-block" src="./images/Logo.png" alt="Logo" width="100" height="100">
    <h1 class="h3 mb-3 font-weight-normal">Sign up to join Orbuk.</h1>
    <div class="col-6">
      <label for="inputFirstName" class="sr-only">First Name</label>
      <input type="text" name="firstName" id="firstName" class="form-control mb-2 pl-2" placeholder="First Name"
        required autofocus onkeyup="manage(this)">
    </div>

    <div class="col-6">
      <label for="inputLastName" class="sr-only">Last Name</label>
      <input type="text" name="lastName" id="lastName" class="form-control mb-2 pl-2" placeholder="Last Name" required
        onkeyup="manage(this)">
    </div>

    <div class="col-6">
      <label for="inputEmail" class="sr-only">E-mail</label>
      <input type="email" name="username" id="username" class="form-control mb-2 pl-2" placeholder="E-mail" required
        onkeyup="manage(this)">
    </div>

    <div class="col-6">
      <label for="inputPhone" class="sr-only">Telephone</label>
      <input type="text" name="phone" id="phone" class="form-control mb-2 pl-2" placeholder="Telephone" required
        onkeyup="manage(this)" onkeypress="return isNumberKey(event)">
    </div>

    <div class="col-6">
      <div class="d-inline-flex p-2 bd-highlight">
        <label for="selectSecretQuestion" class="sr-only">Secret Question</label>
        <h4 class="h6 pr-2 font-weight-normal">Secret Question:</h4>
        <select class="form-control form-control-sm" name="secretQuestion">
          <option value="What was your childhood nickname?">What was your childhood nickname?</option>
          <option value="What is the name of your favorite childhood friend?">What is the name of your favorite
            childhood
            friend?</option>
          <option value="What was the name of your first pet?">What was the name of your first pet?</option>
          <option value="What is your mothers maiden name?">What is your mothers maiden name?</option>
        </select>
      </div>
    </div>

    <div class="col-6">
      <label for="inputSecretAnswer" class="sr-only">Secret Answer</label>
      <input type="text" name="secretAnswer" id="secretAnswer" class="form-control mb-2 pl-2"
        placeholder="Secret answer" required onkeyup="manage(this)">
    </div>


    <div class="col-6">
      <label for="inputPassword" class="sr-only">Password</label>
      <input type="password" name="password" id="password" class="form-control mb-2 pl-2" placeholder="Password"
        required onkeyup="manage(this)">
    </div>

    <div class="col-6">
      <label for="inputConfirmPassword" class="sr-only">Confirm Password</label>
      <input type="password" name="confirmationPassword" id="confirmationPassword" class="form-control mb-2 pl-2"
        placeholder="Confirm password" required onkeyup="manage(this)">
    </div>

    {{#if usernameError}}
    <div class="invalid text-center text-danger pb-2">
      <span>{{usernameError}}</span>
    </div>
    {{/if}}

    {{#if passwordError}}
    <div class="invalid text-center text-danger pb-2"> 
      <span>{{passwordError}}</span>
    </div>
    {{/if}}

    {{#if confirmationPasswordError}}
    <div class="invalid text-center text-danger pb-2">
      <span>{{confirmationPasswordError}}</span>
    </div>
    {{/if}}

    {{#if errorMessage}}
    <div class="invalid text-center text-danger pb-2">
      <span>{{errorMessage}}</span>
    </div>
    {{/if}}

    <div class="col-6">
      <input class="btn mb-4 btn-lg btn-primary btn-block" type="submit" id="submit" value="Submit" disabled />
    </div>

    <div class="col-6">
      <div class="already-account d-flex justify-content-center">
        <p class="pr-2">Have an account?</p><a href="/">Click here</a>
      </div>
    </div>


    <script>
      function manage(txt) {
        var bt = document.getElementById('submit');
        var ele = document.getElementsByTagName('input');

        for (i = 0; i < ele.length; i++) {

          if ((ele[i].type === 'text' || ele[i].type === 'password') && ele[i].value == '') {
            bt.disabled = true;    // Disable the button.
            return false;
          }
          else {
            bt.disabled = false;   // Enable the button.
          }
        }
      }

      function isNumberKey(event) {
        if (event.keyCode > 31 && (event.keyCode < 48 || event.keyCode > 57))
          return false;
        return true;
      }
    </script>
  </form>
</div>