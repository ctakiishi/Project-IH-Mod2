<nav class="navbar navbar-light bg-light sticky-top">
  <a class="navbar-brand" href="#">
    <img src="/images/Logo.png" alt="Orbuk main logo" width="50" height="50" class="d-inline-block align-center"
      loading="lazy">Your book network</a>
  <img class="avatar-image navbar-brand ml-auto" src="{{loggedUser.imageAvatar}}" width="50" height="50"
    alt="user-avatar">

  <span class="navbar-text ml-2 mr-4">{{loggedUser.firstName}} {{loggedUser.lastName}}</span>

  <button class="btn btn-primary p-1" id="new-book">New book</button>

  <a class="nav-link text-white ml-4 mr-2 bg-danger rounded p-1" href="/logout">Logout</a>
</nav>

<div id="book-search">
</div>

<div id="book-result">
</div>

<div id="add-book-form">
</div>

<div class="row my-2">

  <div class="col-9">

    <main>
      {{#if data}}
      <h2>My Books<span class="badge badge-primary ml-2 p-2">{{data.length}}</span>
        <span class="sr-only">Number of books added</span></h2>
      <div class="books-list row row-cols-1 row-cols-md-3 row-cols-lg-4 row-cols-xl-5">
        {{#each data}}
        <div class="col mb-4 p-2">
          <div class="book-info card h-100">
            <div class="title card-header h5 bg-secondary p-2"><span class="titlein h5">{{title}}</span></div>
            <div class="coverURL"><img class="coverURLin card-img-top" src="{{coverURL}}" alt="Cover not available">
            </div>
            <div class="card-body p-2 bg-white">
              <div class="author card-text h6">Authors:
                {{#each author}}
                <p><span class="authorin pl-4">{{this}}</span></p>
                {{/each}}
              </div>
              <div class="isbn_10 card-text h6 pt-1">ISBN-10: <span class="isbn_10in">{{isbn_10}}</span></div>
              <div class="isbn_13 card-text h6 pt-1">ISBN-13: <span class="isbn_13in">{{isbn_13}}</span></div>
              <div style="display:none" class="summary card-text h6 pt-1">Summary: <span
                  class="summaryin">{{summary}}</span>
              </div>
              <div class="evaluation card-text h6 pt-1"><small class="text-muted">Evaluation: <span
                    class="evaluationin">{{evaluation.[0].eval}}</span></small>
              </div>
              <div class="readStatus card-text h6"><small class="text-muted">Read Status: <span
                    class="readStatusin">{{readStatus.[0].status}}</span></small>
              </div>
            </div>
          </div>
        </div>
        {{/each}}
      </div>

      {{else}}
      <div class="empty-books">
        <h2>There are no books yet</h2>
      </div>
      {{/if}}
    </main>
  </div>

  <div class="col-3">

    <section class="bg-light border-secondary rounded mr-1">
      <h2 class="bg-secondary p-2 text-center">{{mostRead.length}} Most read</h2>
      {{#if mostRead}}
      <div class="most-read-list py-2">
        {{#each mostRead}}
        <div class="read-book-info">
          <div class="title"><span class="badge badge-primary ml-2 py-1 px-2">{{size}}</span>
            <span class="sr-only">Read count</span><span>{{title}}</span></div>
          {{!-- <div class="readStatus">Read count: <span>{{size}}</span></div> --}}
        </div>
        {{/each}}
      </div>

      {{else}}
      <div class="empty-books">
        <h2>There are no read books yet</h2>
      </div>
      {{/if}}
    </section>

    <section class="mt-3 bg-light border-secondary rounded mr-1">
      <h2 class="bg-secondary p-2 text-center">{{mostRec.length}} Most recommended</h2>
      {{#if mostRec}}
      <div class="most-rec-list py-2">
        {{#each mostRec}}
        <div class="rec-book-info">
          <div class="title"></span><span class="badge badge-primary ml-2 py-1 px-2">{{size}}</span>
            <span class="sr-only">Thumbs up count</span><span>{{title}}</span></div>
          {{!-- <div class="evaluation">Up count: <span>{{size}}</span></div> --}}
        </div>
        {{/each}}
      </div>

      {{else}}
      <div class="empty-books">
        <h2>There are no recommended books yet</h2>
      </div>
      {{/if}}
    </section>
  </div>

</div>

<section id="book-edit">
</section>

<script src="/javascripts/dashboard.js" charset="utf-8"></script>