<div class="modal fade" id="book-search-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div id="book-search" class="modal-body">

      </div>
      <div id="book-result" class="modal-body">

      </div>
      <div id="add-book-form" class="modal-body">

      </div>
